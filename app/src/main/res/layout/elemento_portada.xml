<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:paddingBottom="10dp"
	android:clickable="false">

	<TextView
		android:id="@+id/tvTituloPortada"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignParentStart="true"
		android:layout_alignParentTop="true"
		android:layout_marginTop="35dp"
		android:paddingLeft="10dp"
		android:text="tvTitulo"
		android:textColor="@color/colorAccent"
		android:textSize="30dp" />

	<TextView
		android:id="@+id/tvSubtituloPortada"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignParentStart="true"
		android:layout_below="@+id/tvTituloPortada"
		android:layout_marginTop="13dp"
		android:paddingLeft="10dp"
		android:text="tvSubtitulo"
		android:textColor="@color/colorAccent"
		android:textSize="21dp" />

	<View
		android:id="@+id/vLinea"
		android:layout_width="wrap_content"
		android:layout_height="2dp"
		android:layout_marginLeft="10dp"
		android:layout_marginRight="10dp"
		android:layout_below="@+id/tvSubtituloPortada"
		android:layout_marginTop="10dp"
		android:background="@color/common_google_signin_btn_text_light_disabled"
		android:orientation="horizontal" />

	<ImageButton
		android:id="@+id/ibAListado"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:background="@color/colorWhite"
		app:srcCompat="@drawable/right"
		android:layout_above="@+id/tvSubtituloPortada"
		android:layout_alignParentEnd="true" />

	<TextView
		android:id="@+id/tvNumero"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignBottom="@+id/ibAListado"
		android:layout_marginRight="10dp"
		android:layout_toStartOf="@+id/ibAListado"
		android:background="@drawable/rounded_corner"
		android:textAlignment="center"
		android:paddingTop="10dp"
		android:text="120"
		android:textColor="@color/colorWhite"
		android:textSize="15sp" />

</RelativeLayout>
