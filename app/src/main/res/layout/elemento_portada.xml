<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:paddingBottom="10dp"
	android:clickable="false">

	<TextView
		android:id="@+id/tvTituloPortada"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignParentStart="true"
		android:layout_alignParentTop="true"
		android:layout_marginTop="35dp"
		android:paddingLeft="10dp"
		android:text="tvTitulo"
		android:textColor="@color/colorAccent"
		android:textSize="20sp" />

	<TextView
		android:id="@+id/tvSubtituloPortada"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignParentStart="true"
		android:layout_below="@+id/tvTituloPortada"
		android:layout_marginTop="13dp"
		android:paddingLeft="10dp"
		android:text="tvSubtitulo"
		android:textColor="@color/colorAccent"
		android:textSize="14sp" />

	<LinearLayout
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_above="@+id/tvSubtituloPortada"
		android:layout_alignParentEnd="true"
		android:layout_marginRight="10dp"
		android:orientation="horizontal">

		<TextView
			android:id="@+id/tvNumero"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:background="@drawable/rounded_corner"
			android:text=" 120 "
			android:textAlignment="center"
			android:textColor="@color/colorWhite"
			android:textSize="16sp" />

		<ImageButton
			android:id="@+id/ibAListado"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:background="@color/colorWhite"
			app:srcCompat="@drawable/right"
			android:layout_marginTop="5dp"
			android:layout_marginLeft="4dp"/>


	</LinearLayout>

</RelativeLayout>
