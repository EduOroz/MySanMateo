<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:paddingBottom="10dp"
	android:clickable="false">

	<TextView
		android:id="@+id/tvDia"
		android:layout_width="100dp"
		android:layout_height="wrap_content"
		android:layout_alignParentLeft="true"
		android:layout_alignParentStart="true"
		android:layout_alignParentTop="true"
		android:layout_marginLeft="10dp"
		android:layout_marginTop="30dp"
		android:background="@drawable/rounded_corner"
		android:textColor="@color/colorWhite"
		android:padding="5dp"
		android:text="tvDia"
		android:textSize="18dp"
        android:textAlignment="center"/>

	<TextView
		android:id="@+id/tvHora"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignParentLeft="true"
		android:layout_alignParentStart="true"
		android:layout_below="@+id/tvDia"
		android:layout_marginLeft="10dp"
		android:layout_marginTop="24dp"
		android:text="tvHora"
		android:textColor="@color/colorPrimaryDark"
		android:textSize="18dp" />

	<TextView
		android:id="@+id/tvCategoria"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignBottom="@+id/tvHora"
		android:layout_alignParentEnd="true"
		android:layout_alignParentRight="true"
		android:layout_marginEnd="44dp"
		android:layout_marginRight="44dp"
		android:text="tvCategoria"
		android:textColor="@color/colorPrimary"
		android:textSize="18dp" />

	<TextView
		android:id="@+id/tvTitulo"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_alignLeft="@+id/tvHora"
		android:layout_alignStart="@+id/tvHora"
		android:layout_below="@+id/tvHora"
		android:layout_marginTop="11dp"
		android:text="tvTitulo"
		android:textColor="@color/colorAccent"
		android:textSize="18dp" />

	<ImageView
		android:id="@+id/imageView"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignLeft="@+id/tvTitulo"
		android:layout_alignStart="@+id/tvTitulo"
		android:layout_below="@+id/tvTitulo"
		android:layout_marginTop="27dp"
		app:srcCompat="@drawable/location_small" />

	<TextView
		android:id="@+id/tvLugar"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignTop="@+id/imageView"
		android:layout_toEndOf="@+id/imageView"
		android:layout_toRightOf="@+id/imageView"
		android:paddingLeft="10dp"
		android:text="tvLugar"
		android:textColor="@color/colorAccent"
		android:textSize="15dp" />

	<TextView
		android:id="@+id/tvDireccion"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignLeft="@+id/tvLugar"
		android:layout_alignStart="@+id/tvLugar"
		android:layout_below="@+id/tvLugar"
		android:paddingLeft="10dp"
		android:text="tvDireccion"
		android:textColor="@color/colorAccent"
		android:textSize="15dp" />

	<View
		android:id="@+id/vLinea"
		android:layout_width="wrap_content"
		android:layout_height="2dp"
		android:layout_marginLeft="10dp"
		android:layout_marginRight="10dp"
		android:layout_below="@+id/tvDireccion"
		android:layout_marginTop="10dp"
		android:background="@color/common_google_signin_btn_text_light_disabled"
		android:orientation="horizontal" />

	<ImageView
		android:id="@+id/ivWeb"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_toStartOf="@+id/ivLocalizacion"
		android:layout_below="@+id/vLinea"
		android:layout_marginRight="10dp"
		android:layout_marginTop="10dp"
		app:srcCompat="@drawable/web" />

	<ImageView
		android:id="@+id/ivLocalizacion"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_below="@+id/vLinea"
		android:layout_marginRight="10dp"
		android:layout_marginTop="10dp"
		android:layout_alignEnd="@+id/vLinea"
		android:layout_alignRight="@+id/vLinea"

		app:srcCompat="@drawable/location_button" />

</RelativeLayout>